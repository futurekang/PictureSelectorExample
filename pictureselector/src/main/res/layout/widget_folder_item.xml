<?xml version="1.0" encoding="utf-8"?>
<com.futurekang.pictureselector.view.RadioButtonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_theme_background"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_title_page"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/color_theme_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_title_page"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="所有照片" />

    <TextView
        android:id="@+id/tv_file_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/color_theme_text_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_folder_name"
        app:layout_constraintStart_toEndOf="@+id/tv_folder_name"
        app:layout_constraintTop_toTopOf="@+id/tv_folder_name"
        tools:text="(100)" />

    <RadioButton
        android:id="@+id/rb_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_8a8a8a"
        app:layout_constraintBottom_toBottomOf="parent" />
</com.futurekang.pictureselector.view.RadioButtonLayout>